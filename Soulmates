  <script>
    // Simple JS for login + local chat prototype

    const authScreen = document.getElementById('authScreen');
    const chatScreen = document.getElementById('chatScreen');
    const userInfo = document.getElementById('userInfo');
    const userNameLabel = document.getElementById('userNameLabel');
    const userAvatar = document.getElementById('userAvatar');
    const loginBtn = document.getElementById('loginBtn');
    const logoutBtn = document.getElementById('logoutBtn');
    const displayNameInput = document.getElementById('displayName');
    const statusLineInput = document.getElementById('statusLine');

    const chatWrapper = document.getElementById('chatWrapper');
    const msgInput = document.getElementById('msgInput');
    const sendBtn = document.getElementById('sendBtn');

    const attachBtn = document.getElementById('attachBtn');
    const audioBtn = document.getElementById('audioBtn');
    const videoBtn = document.getElementById('videoBtn');

    function formatTime(date) {
      const h = date.getHours();
      const m = date.getMinutes().toString().padStart(2, '0');
      const hour12 = (h % 12) || 12;
      const ampm = h < 12 ? 'AM' : 'PM';
      return `${hour12}:${m} ${ampm}`;
    }

    function addMessage({ text, from = 'me' }) {
      const row = document.createElement('div');
      row.className = 'msg-row ' + (from === 'me' ? 'me' : 'them');

      const bubble = document.createElement('div');
      bubble.className = 'msg-bubble ' + (from === 'me' ? 'msg-me' : 'msg-them');
      bubble.textContent = text;

      const meta = document.createElement('div');
      meta.className = 'msg-meta';
      meta.textContent = formatTime(new Date());

      bubble.appendChild(meta);
      row.appendChild(bubble);
      chatWrapper.appendChild(row);
      chatWrapper.scrollTop = chatWrapper.scrollHeight;
    }

    function showPrototypeButtonsInfo(type) {
      let message = '';
      if (type === 'attach') {
        message = 'File sending will be powered by cloud storage in a future version.';
      } else if (type === 'audio') {
        message = 'Audio calls will use WebRTC / call APIs in a future release.';
      } else if (type === 'video') {
        message = 'Video calls will be enabled once real-time signalling is connected.';
      }
      alert('Coming soon:\n\n' + message);
    }

    attachBtn.addEventListener('click', () => showPrototypeButtonsInfo('attach'));
    audioBtn.addEventListener('click', () => showPrototypeButtonsInfo('audio'));
    videoBtn.addEventListener('click', () => showPrototypeButtonsInfo('video'));

    // LOGIN / LOGOUT

    function updateUserUI(name) {
      userNameLabel.textContent = '@' + name;
      userAvatar.textContent = name.charAt(0).toUpperCase() || 'S';
    }

    function signIn(name) {
      localStorage.setItem('soulmatesUser', name);
      authScreen.style.display = 'none';
      chatScreen.style.display = 'flex';
      userInfo.style.display = 'flex';
      updateUserUI(name);

      // Welcome messages
      addMessage({
        from: 'them',
        text: `Welcome, ${name}. This is the Soulmates community prototype.`
      });
      addMessage({
        from: 'them',
        text: 'In a future version, this space will connect you with real people in real time.'
      });
    }

    function signOut() {
      localStorage.removeItem('soulmatesUser');
      authScreen.style.display = 'flex';
      chatScreen.style.display = 'none';
      userInfo.style.display = 'none';
      // Clear chat except first system elements
      while (chatWrapper.children.length > 2) {
        chatWrapper.removeChild(chatWrapper.lastChild);
      }
    }

    loginBtn.addEventListener('click', () => {
      const name = displayNameInput.value.trim() || 'guest';
      signIn(name);
    });

    logoutBtn.addEventListener('click', () => {
      signOut();
    });

    // Restore session if exists
    const savedUser = localStorage.getItem('soulmatesUser');
    if (savedUser) {
      authScreen.style.display = 'none';
      chatScreen.style.display = 'flex';
      userInfo.style.display = 'flex';
      updateUserUI(savedUser);
    }

    // MESSAGE SENDING

    function sendMessage() {
      const text = msgInput.value.trim();
      if (!text) return;
      addMessage({ text, from: 'me' });
      msgInput.value = '';

      // Tiny auto-reply to make it feel alive
      setTimeout(() => {
        addMessage({
          from: 'them',
          text: 'Soulmates prototype received: â€œ' + text + 'â€'
        });
      }, 700);
    }

    sendBtn.addEventListener('click', sendMessage);
    msgInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
</body>
</html>
